<h1>Add New Event</h1>
<%= form_for @event do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :location %><br/>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
   <p>
    <%= f.label :date %><br/>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :time %><br/>
    <%= f.time_field :time %>
  </p>
  <p>
    <%= f.label :fee %><br/>
    <%= f.number_field :fee %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>