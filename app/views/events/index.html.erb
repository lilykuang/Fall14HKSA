<h1><%= pluralize(@events.size, 'Event') %></h1>

<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= event.title %></h2>
    </header>
    <p>
      <%= event.description %>
    </p>
    <table>
      <tr>
        <th>Date:</th>
        <td><%= event.date %></td>
      </tr>
      <tr>
        <th>Time:</th>
        <td><%= event.time %></td>
      </tr>
      <tr>
        <th>Fee:</th>
        <td><%= number_to_currency(event.fee) %></td>
      </tr>
    </table>
  </article>
<% end %>