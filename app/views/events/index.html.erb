<h1><%= pluralize(@events.size, 'Event') %></h1>
<%= link_to "Add New Event", new_event_path %>
<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= link_to(event.title, "/events/#{event.id}") %></h2>
    </header>
    <p>
      <%= event.description %>
    </p>
    <table>
      <tr>
        <th>Date:</th>
        <td><%= event.date %></td>
      </tr>
      <tr>
        <th>Time:</th>
        <td><%= event.time %></td>
      </tr>
      <tr>
        <th>Fee:</th>
        <td><%= number_to_currency(event.fee) %></td>
      </tr>
      <tr>
        <th>Flyer:</th>
        <td><%= event.avatar.url %></td>
      </tr>
    </table>
  </article>
<% end %>